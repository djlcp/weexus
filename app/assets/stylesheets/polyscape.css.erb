* {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
}
html{
        overflow-x: hidden;
        min-height: 100%;
        box-sizing: border-box;
}
*,
*:before,
*:after {
    box-sizing: inherit;
}
html{
    min-height: 100%
}


/*-------------------*/
/* Background styles */
/*-------------------*/
.polyscape-background {
        margin: 30px auto;
        /*width: 80vw;*/
        height: 75vh;
        overflow: hidden;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        text-align: center;
}
.polyscape-background > div {
        position: absolute;
}
/*-------------------*/
/*      Polyscape 1      */
/*-------------------*/
#polyscape-1 {
        background-image: url(<%= asset_path "polyscape-1/people.jpg" %>);
        background-color: rgba(240, 240, 240, 0.4);
}

/*-------------------*/
/*      Polyscape 4      */
/*-------------------*/
#polyscape-4 {
        background-image: url(<%= asset_path "polyscape-4/citysky.jpg" %>);
        /*filter: grayscale(25%);*/
}
#polyscape-4 .circle{
        position:relative;
        display: block;
        width: 400px;
        height: 400px;
        margin: 2em 0em;
        border-radius: 50%;
        background: url(<%= asset_path "polyscape-4/clouds2.jpg" %>) fixed center;
        background-size: contain;
            /*filter: hue-rotate(120deg) contrast(140%);*/
        filter: hue-rotate(30deg) brigthness(5%) contrast(0%);
        text-align: center;
        background: -webkit-linear-gradient(left,rgba(255,0,0,0),rgba(255,255,255,1));
      }
#polyscape-4 .circle:after{
        display: block;
        padding-bottom: 100%;
        width: 100%;
        height: 0;
        content: "";
      }
    #polyscape-4 .circle__inner {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
      }
    #polyscape-4 .circle__wrapper {
            display: table;
            width: 100%;
            height: 100%;
    }
    #polyscape-4 .circle__content {
            display: table-cell;
            padding: 1.5em ;
            vertical-align: middle;
    }

/*-------------------*/
/*      Polyscape 5      */
/*-------------------*/
#polyscape-5 {
        background-image: url(<%= asset_path "polyscape-5/bench.jpg" %>) ;
}
/*AH Changed this from triangle to square*/
#polyscape-5 .triangle{
        clip-path: polygon(50% 0, 0 100%, 100% 100%);
        background-color: rgba(135, 206, 260, 0.4);
}

